---
interface Props {
	title?: string;
}

const { title = 'Windsurf IDE - The World\'s First Agentic IDE' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Experience the future of development with Windsurf IDE - the world's first agentic IDE powered by advanced AI." />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Experience the future of development with Windsurf IDE - the world's first agentic IDE powered by advanced AI." />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>
</style>
