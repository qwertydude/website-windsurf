 ---
const testimonials = [
  {
    quote: "Windsurf has completely transformed how I write code. The AI assistance is incredible!",
    author: "Sarah Chen",
    role: "Senior Developer"
  },
  {
    quote: "The most intelligent IDE I've ever used. It's like having a senior developer by your side.",
    author: "Michael Rodriguez",
    role: "Tech Lead"
  },
  {
    quote: "Game-changing productivity boost. Can't imagine coding without it now.",
    author: "Emma Thompson",
    role: "Full Stack Developer"
  }
];
---
<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-12">What Developers Say</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="p-6 bg-white rounded-lg shadow-sm">
          <blockquote class="text-gray-600 mb-4">"{testimonial.quote}"</blockquote>
          <div class="font-semibold">{testimonial.author}</div>
          <div class="text-blue-600">{testimonial.role}</div>
        </div>
      ))}
    </div>
  </div>
</section>
